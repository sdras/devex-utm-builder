{
  "manifest_version": 2,
  "name": "Devex UTM Builder",
  "version": "1.0.0",

  "description": "Easily Creates UTMs for the Devex Team",
  "short_name": "Devex UTM Builder",
  "permissions": ["activeTab", "declarativeContent", "tabs", "storage", "<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["utmbuilder.css"],
      "js": ["utmbuilder.js"]
    }
  ],
  "browser_action": {
    "default_title": "Create a UTM from the page",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }
}
